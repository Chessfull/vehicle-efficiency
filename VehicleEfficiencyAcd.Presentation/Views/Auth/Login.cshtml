@model LoginRequest

<!-- ▼ I dont want display scrool bar on this page ▼ -->
<style>

    body {
        overflow: hidden;
    }

</style>

<!-- ▼ Login Submit Form ▼ -->
<section class="login-form-container d-flex justify-content-center align-items-center mt-5" >
    <div class="container">
        <div class="row justify-content-center align-items-center gy-4">
            <div class="col-12 col-md-8 col-lg-5 bg-white p-3 p-md-4 rounded shadow-lg">
                <h2 class="text-center mb-4">Login</h2>

                <!-- ▼ Taking message from controller with viewbag if there is error and showing ▼ -->
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }

                <!-- ▼ Register Submit Form ▼ -->
                <form method="post" asp-controller="Auth" asp-action="Login">
                    <div class="mb-3">
                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" required>
                    </div>

                    <div class="mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" required>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">Remember me</label>
                        </div>
                        <a href="/Auth/Register" class="text-muted small mt-2 mt-md-0">Forgot Password?</a>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Login</button>
                    </div>

                    <div class="text-center mt-3">
                        <p>Don't have an account? <a asp-controller="Auth" asp-action="Register">Sign Up</a></p>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>






